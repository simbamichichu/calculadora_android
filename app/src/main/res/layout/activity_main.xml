<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant70"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="85dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit2"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTres"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitSum"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="364dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitEqual"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="364dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="pressDigitC"
        android:text="c"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:onClick="pressDigit1"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDos"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/design_default_color_surface"
        android:backgroundTint="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:onClick="pressDigit0"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPunto"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit3"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnMenos"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="pressDigitpunto"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="284dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitmenos"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit4"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnCinco"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit5"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSeis"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit6"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnMas"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit7"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnOcho"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit8"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnNueve"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/black"
        android:onClick="pressDigit9"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPor"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnPor"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitPor"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitdivicion"
        android:text="/"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <Button
        android:id="@+id/btnPorcentajes"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitPorcentajes"
        android:text="%"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorLink="@color/design_default_color_error"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnParentesis"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:rippleColor="@color/design_default_color_error" />

    <Button
        android:id="@+id/btnParentesis"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/design_default_color_error"
        android:onClick="pressDigitParentesis"
        android:text="( )"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btndivision"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />
</androidx.constraintlayout.widget.ConstraintLayout>